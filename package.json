{
  "name": "ermate",
  "version": "0.0.0",
  "type": "module",
  "description": "AI-powered Visual Database Schema Designer - Design ER diagrams, define tables and relationships manually or via prompts, and share via URL",
  "author": "Konstantin Komelin <konstantin.komelin@gmail.com>",
  "license": "Apache-2.0",
  "homepage": "https://ermate.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/kkomelin/ermate",
    "directory": ""
  },
  "bugs": {
    "url": "https://github.com/kkomelin/ermate/issues"
  },
  "keywords": [
    "er-diagram",
    "entity-relationship",
    "database",
    "schema",
    "ai",
    "pwa",
    "sql",
    "postgres",
    "mysql",
    "sqlite",
    "ermate"
  ],
  "scripts": {
    "dev": "vite --open",
    "dev:api": "tsx watch --env-file=.env.local api/dev.ts",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,css,html}'",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "pnpm typecheck && pnpm lint && pnpm test",
    "prepare": "husky"
  },
  "dependencies": {
    "@clerk/clerk-react": "^5.60.1",
    "@clerk/hono": "^0.0.1",
    "@dagrejs/dagre": "^2.0.4",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@tailwindcss/vite": "^4.1.18",
    "@xyflow/react": "^12.10.0",
    "ai": "^6.0.86",
    "class-variance-authority": "^0.7.1",
    "hono": "^4.11.9",
    "lucide-react": "^0.563.0",
    "lz-string": "^1.5.0",
    "next-themes": "^0.4.6",
    "node-sql-parser": "^5.4.0",
    "radix-ui": "^1.4.3",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "sonner": "^2.0.7",
    "tailwindcss": "^4.1.18",
    "zod": "^4.3.6",
    "zundo": "^2.3.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@hono/node-server": "^1.19.9",
    "@types/dagre": "^0.7.53",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "clsx": "^2.1.1",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "shadcn": "^3.8.4",
    "tailwind-merge": "^3.4.0",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "8.0.0-beta.14",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,html}": "prettier --write"
  }
}
